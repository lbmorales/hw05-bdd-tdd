-#  This file is app/views/movies/similars.html.haml
%h1 Similar Movies page for #{@movie.title}

%table#movies
  %thead
    %tr
      %th= link_to 'Movie Title', movies_path
      %th Rating
      %th More Info
  %tbody
    - @similar_movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Back to movie list', movies_path
